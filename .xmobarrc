Config { font = "-*-terminus-medium-*-*-*-*-*-72-72-*-*-*-u"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , lowerOnStart = True
       , commands = [ Run Network "wlan0" ["-L","200","-H","1000","--normal","green","--high","red"] 10
                    , Run Network "eth0"  ["-L","200","-H","1000","--normal","green","--high","red"] 10
                    , Run Weather "EDGR" ["-t"," <tempC>C","-L","0","-H","20","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-L","20","-H","70","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%", "green"] 10
                    , Run Swap [] 10
                    , Run Com "uname" ["-o", "-m", "-r"] "" 36000
                    , Run Date "%a %b %_d %k:%M" "date" 10
                    , Run BatteryP ["BAT0"] [] 30
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %eth0% %wlan0%    <fc=#ee9a00>%date%</fc>     %battery%"
       }
